<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2"> 
  <plugin-info> 
    <description>${project.description}</description>  
    <version>${project.version}</version>  
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>  
    <param name="plugin-icon">images/pluginIcon.png</param>  
    <param name="plugin-logo">images/pluginLogo.png</param> 
  </plugin-info>  
  <!-- add our i18n resource -->  
  <resource type="i18n" name="i18n" location="Library"/>  
  <!-- add our web resources -->

  <ao key="ao-module">
    <description>The module configuring the Active Objects service used by this plugin</description>
    <entity>com.atlassian.confluence.ao.Author</entity>
    <entity>com.atlassian.confluence.ao.Book</entity>
    <entity>com.atlassian.confluence.ao.BookToAuthor</entity>
    <entity>com.atlassian.confluence.ao.BookToEditionType</entity>
    <entity>com.atlassian.confluence.ao.BookToTag</entity>
    <entity>com.atlassian.confluence.ao.Commentary</entity>
    <entity>com.atlassian.confluence.ao.EditionType</entity>
    <entity>com.atlassian.confluence.ao.Lending</entity>
    <entity>com.atlassian.confluence.ao.Tag</entity>
  </ao>

  <web-item name="library-entity" key="library-entity" section="system.user/user-content">
    <description key="library-entity.desc">Adds the "Library" action into users's menu</description>
    <label key="Библиотека"/>
    <link linkId="library-entity">/secure/Library.jspa</link>
  </web-item>

  <servlet name="Library servlet" key="library-servlet" class="com.atlassian.confluence.servlet.LibraryServlet">
    <description key="library-servlet.desc">A servlet for library page</description>
    <url-pattern>/library</url-pattern>
<!--    <component-import key="velocity-renderer" interface="com.atlassian.templaterenderer.TemplateRenderer" />-->
  </servlet>

  <routing key="library-routing" path="/secure">
    <route from="Library.jspa" to="/plugins/servlet/library"/>
  </routing>

  <rest key="libraryRest" path="/library" version="1.0" context="host:port">
    <description>Rest-service: response on JS requests</description>
  </rest>

  <web-resource key="library-servlet-resources" name="Library Web Resource">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="Library.js" location="/js/Library.js"/>
    <resource type="download" name="Library.css" location="/css/Library.css"/>
    <context>alt.general</context>
  </web-resource>

  <web-resource key="no-confluence-user" name="No Confluence User Web Resource">
<!--    <dependency>com.atlassian.auiplugin:ajs</dependency>-->
<!--    <resource type="download" name="Library.js" location="/js/Library.js"/>-->
<!--    <resource type="download" name="Library.css" location="/css/Library.css"/>-->
<!--    <context>alt.general</context>-->
  </web-resource>

</atlassian-plugin>
